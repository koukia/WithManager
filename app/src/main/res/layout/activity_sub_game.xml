<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/our_team_list"
        android:listSelector="@drawable/p1_listselector" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="center_horizontal|bottom">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:id="@+id/btn_start"
                android:enabled="false"
                android:clickable="false"
                android:textColor="#0015ff"
                android:contextClickable="false"
                android:longClickable="false"
                android:visibility="invisible" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="シュート"
                android:id="@+id/btn_record"
                android:enabled="true"
                android:clickable="false"
                android:textColor="#ff0000"
                android:visibility="invisible" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="score "
                android:id="@+id/score_label"
                android:layout_gravity="left|top"
                android:textSize="20dp"
                android:background="#ffffff"
                android:textColor="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/our_score"
                android:textSize="20dp"
                android:background="#ffffff"
                android:textColor="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:id="@+id/bar"
                android:textSize="20dp"
                android:background="#ffffff"
                android:textColor="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/enemies_score"
                android:textSize="20dp"
                android:background="#ffffff"
                android:textColor="#000000" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/image_layout"
            android:gravity="center_vertical|center_horizontal">

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|right">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2Pシュート"
                android:id="@+id/shoot_success_2p"
                android:enabled="true"
                android:clickable="false"
                android:textColor="#0033ff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3Pシュート"
                android:id="@+id/shoot_success_3p"
                android:enabled="true"
                android:clickable="false"
                android:textColor="#0033ff"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="フリースロー"
                android:id="@+id/shoot_succes_free"
                android:enabled="true"
                android:clickable="false"
                android:textColor="#0033ff"
                />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="スティール"
            android:id="@+id/steal"
            android:enabled="true"
            android:clickable="false"
            android:textColor="#0033ff"
            android:layout_gravity="left|top"
            android:layout_marginTop="60dp"
            android:layout_alignParentTop="true" />

        <Button
            android:text="Undo"
            android:id="@+id/miss_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:clickable="false"
            android:textColor="#0033ff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="left|bottom" />
        />
    </FrameLayout>

    <ListView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/enemies_team_list"
        android:listSelector="@drawable/p2listselector" />

</LinearLayout>